<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', {style: 'indexStyle.css'}) %>

  <body>
    <!-- panel to display player info -->
    <div id="player-panel" class="panel">
      <span id="username" title="your player name"></span>
      <span id="highScore" title="you current high score"></span>
    </div>

    <!-- panel to display menu -->
    <div id="menu-panel" class="panel">
      <img id="menu-panel-logo" src="/static/asset/image/menu_panel_logo.png" />

      <div id="button-sub-panel" class="sub-panel">
        <button id="simple-button" class="button">simple mode</button>
        <button id="survival-button" class="button">survival mode</button>
        <button id="stats-button" class="button">stats</button>
        <button id="guide-button" class="button">guide</button>
      </div>
    </div>

    <div class="audio-panel">
      <audio
        id="button-click-audio"
        src="/static/asset/sound/button_click.wav"
        preload="auto"
      ></audio>
    </div>

    <script src="/static/script/indexScript.js" defer></script>
  </body>
</html>
